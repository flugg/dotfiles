# Path to dotfiles
export DOTFILES="$HOME/.dotfiles"

# Aliases
alias dotfiles="sh $HOME/.dotfiles/install.sh" # Install dotfiles
alias dotfiles-git="sh $HOME/.dotfiles/git/install.sh" # Install dotfiles for Git
alias dotfiles-mac="sh $HOME/.dotfiles/mac/install.sh" # Install dotfiles for macOS
alias dotfiles-vim="sh $HOME/.dotfiles/vim/install.sh" # Install dotfiles for Vim
alias dotfiles-zsh="sh $HOME/.dotfiles/zsh/install.sh" # Install dotfiles for Zsh